<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MAUI.MVVM.Views.WeatherView"
             Title="WeatherView">

	<Grid Margin="15" RowDefinitions=".08*, .1*, .5*, .1*, .3*">
		<Grid>
			<Frame />
			<SearchBar Placeholder="Search" VerticalOptions="Start" />
		</Grid>
		<VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStackLayout}">
			<Label Text="Paris" Style="{StaticResource Title}"/>
			<Label Text="July 08, 2023" />
		</VerticalStackLayout>
	</Grid>
	
</ContentPage>