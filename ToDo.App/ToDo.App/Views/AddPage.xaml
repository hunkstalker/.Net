<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Agregar tarea"
             x:Class="ToDo.App.Views.AddPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btn_save" Text="Guardar"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="{StaticResource colorPrimaryDark}"/>
            <Entry x:Name="nombre"/>
            <Label Text="Descripción" FontSize="Medium" TextColor="{StaticResource colorPrimaryDark}"/>
            <Editor x:Name="descripcion"  HeightRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>